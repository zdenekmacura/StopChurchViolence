	<item name="android:layout_marginLeft">5dp</item>
	<item name="android:onClick">setEditTextVisibility</item>
    <item name="android:paddingLeft">20dip</item>
    <item name="android:paddingRight">2dip</item>
    <item name="android:layout_margin">14dip</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
	<item name="android:button">@drawable/custom_checkbox_design</item>
    </style>
